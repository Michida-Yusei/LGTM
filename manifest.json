{
  "name": "LGTM",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Looks Good To Me.",
  "permissions": [
    "tabs", "http://*/*", "https://*/*", "clipboardWrite"
  ],
  "browser_action": {
    "default_title": "LGTM",
    "default_popup": "./popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js":      ["./lib/jquery-2.0.3.min.js", "./content/content.js"],
      "run_at":  "document_end"
    }
  ]
}
